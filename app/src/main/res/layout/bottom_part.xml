<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/jiakao_layout"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:background="@drawable/bottom_selector"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/jiakao_iv"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginBottom="5dp"
                android:background="@mipmap/home_g" />

            <TextView
                android:id="@+id/jiakao_tv"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="驾考学习"
                android:textSize="15sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/xueche_layout"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:background="@drawable/bottom_selector"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/xueche_iv"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginBottom="5dp"
                android:background="@mipmap/xuexi" />

            <TextView
                android:id="@+id/xueche_tv"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="学车资讯"
                android:textSize="15sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/person_layout"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:background="@drawable/bottom_selector"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/person_iv"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginBottom="5dp"
                android:background="@mipmap/head_g" />

            <TextView
                android:id="@+id/person_tv"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="个人中心"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>